prototype(Carbon.Link:Class) < prototype(Neos.Fusion:RawArray) {
    link = ${link ? link : false}

    @context.link = ${this.link}

    valid = Carbon.Link:Valid
    prepend = 'link'
    divider = '-'

    linkType = Carbon.Link:Type

    @ignoreProperties = ${['link', 'prepend', 'divider', 'linkType']}

    additionalClass = ${additionalClass}
    value = ${this.linkType && this.valid ? this.prepend + this.divider + this.linkType : false}
}
